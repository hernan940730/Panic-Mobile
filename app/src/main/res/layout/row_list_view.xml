<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/image_in_row"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/main_text_in_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_toEndOf="@+id/image_in_row"
        android:maxLines="1"
        android:maxLength="36"/>
    <TextView
        android:id="@+id/second_text_in_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/main_text_in_row"
        android:layout_toEndOf="@+id/image_in_row"/>
        <!--android:maxLines="1"
        android:ellipsize="end"-->

    <ImageButton
        android:id="@+id/accept_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/reject_request"
        android:background="@drawable/image_view_btn_user_profile"
        android:src="@mipmap/ic_check_green" />
    <ImageButton
        android:id="@+id/reject_request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/image_view_btn_user_profile"
        android:src="@mipmap/ic_close_red" />

</RelativeLayout>