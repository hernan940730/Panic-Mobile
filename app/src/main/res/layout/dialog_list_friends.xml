<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="450dp">

    <ListView
        android:id="@+id/dialog_list_view_friends"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/whiteColor"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/cancel_share_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:background="@drawable/background_with_gray_line_top"
            android:gravity="center"
            android:text="@string/cancel_text_button"
            android:textSize="17sp"
            android:padding="15dp"
            android:textAllCaps="false"
            style="?android:attr/borderlessButtonStyle" />
        <Button
            android:id="@+id/share_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/colorPrimary"
            android:textSize="17sp"
            android:padding="15dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:text="@string/share_text_button"
            android:textColor="@color/whiteColor" />
    </LinearLayout>

</RelativeLayout>