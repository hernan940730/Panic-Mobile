<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.panic.security">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_panic"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_panic"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controllers.main_module.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.login_sign_up_module.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".controllers.login_sign_up_module.SignUpActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>